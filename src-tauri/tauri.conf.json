{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OhMyCowork",
  "version": "0.1.4",
  "identifier": "com.ohmyco.work",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1430",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OhMyCowork",
        "width": 1100,
        "height": 800,
        "backgroundColor": "#0A0A0A"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/agent"
    ],
    "macOS": {
      "entitlements": "entitlements.plist",
      "hardenedRuntime": false,
      "infoPlist": "Info.plist"
    }
  }
}
